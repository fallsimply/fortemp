@import "lib/_base"
@import "lib/_ripple"
main
	display: grid
	grid-template-columns: 1fr 1fr
	grid-auto-flow: column
	grid-gap: 1em 2em
	padding: 2em

/* Input */
textarea, .output, input, button
	background: hsla(220, 36%, 90%, 0.5)
	color: #fff
	border: 2px solid #fff
	display: block
	box-sizing: border-box
	font-size: 1em
	padding: 1em .75em
	min-width: 5em
	border-radius: 4px
	font: 14px "Fira Code", monospace
	line-height: 16px

textarea, .output
	min-height: 10em
	resize: vertical
	overflow: auto

button
	width: 50%
	font-weight: bold
	left: 25%
	transition: background .5s

section
	display: grid
	grid-auto-rows: min-content
	grid-gap: .75em

section.out
	grid-auto-rows: min-content 1fr

/* Input/Options */
[options]
	grid-template-rows: min-content 1fr
	grid-auto-columns: 1fr
	display: grid
	grid-auto-flow: column
	grid-gap: .5em

/* Input/Number */
.numberInput
	position: relative
	input
		width: 100%
	.buttons
		display: grid
		grid-template-columns: 28px 28px
		position: absolute
		padding: 10px
		grid-gap: 10px
		top: 0
		right: 0
		button
			background: hsla(220, 36%, 36%, 0.25)
			height: 2em
			min-width: unset
			width: 2em
			padding: 0
			left: 0

/* Output */
.output
	height: 100%
	pre
		margin: 0

/* Grid */
[column="2"]
	grid-column: 2

[row-span="3"]
	grid-row: span 3

/* Utilities */
:focus
	outline: 0
	// box-shadow: 0px 0px 4px hsla(0, 0%, 0%, 0.4)

[noFocusRing]:focus, svg:focus, svg:hover
	box-shadow: none

svg:focus, svg:hover
	background: hsla(220, 36%, 90%, 0.25)
	border-radius: 50%