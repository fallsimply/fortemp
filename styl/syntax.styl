@import "lib/_base"
body
	padding: 2em

table tr.label td[scope="col"]
	font-weight: bold

.title
	margin-bottom: .75em

table, th, td
	padding: 4px 8px

table, td
	border: 2px solid #fff
	border-collapse: collapse

a[href*="developer.mozilla.org"]::after
	content: " (More on MDN)"

code
	background: hsla(0, 0%, 100%, .25)
	padding: 2px 4px
	border-radius: 2px
	font: 14px "Fira Code", monospace

[withTitle]
	grid-template-rows: min-content 1fr
	grid-auto-columns: max-content
	display: grid
	grid-auto-flow: column
	grid-gap: .5em 1.5em
	p
		margin: 0

section[id]
	margin-bottom: 2em

ul > li
	line-height: 1.75

p
	line-height: 1.5

section#toc nav
	padding: 0 2em
	line-height: 1.5
	a
		display: block
		text-decoration: none
		font-weight: bold
	a::before
		content: "â€¢"
		width: 1rem
		display: inline-block
	a::after
		content: " (" attr(href) ")"
		text-decoration: none